{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "phasor-update.schema.json",
  "title": "Phasor Update",
  "description": "Update phasor values for a stream",
  "type": "object",
  "required": ["freq", "channels"],
  "properties": {
    "freq": {
      "type": "number",
      "description": "System frequency in Hz",
      "minimum": 45.0,
      "maximum": 65.0,
      "default": 60.0
    },
    "channels": {
      "type": "object",
      "description": "Phasor values per channel",
      "patternProperties": {
        "^(V|I)-[A-N]$": {
          "type": "object",
          "required": ["mag", "angleDeg"],
          "properties": {
            "mag": {
              "type": "number",
              "description": "Magnitude (RMS for voltage in V, current in A)",
              "minimum": 0
            },
            "angleDeg": {
              "type": "number",
              "description": "Phase angle in degrees",
              "minimum": -180.0,
              "maximum": 360.0
            }
          }
        }
      },
      "minProperties": 1
    }
  }
}
